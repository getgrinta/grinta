---
// eslint-disable-next-line
import { SearchIcon, SparklesIcon, BrainCircuitIcon } from "lucide-svelte";
---

<section
    class="flex flex-col rounded-[1.5rem] relative !mt-24 sm:!mt-32 lg:!mt-40 px-4 intersect:motion-preset-slide-up"
>
    <div class="text-center !mb-6 sm:!mb-8 lg:!mb-12">
        <h2 class="!text-2xl sm:!text-3xl lg:!text-5xl !mb-3 lg:!mb-4">
            Sleek, Fast, and Intelligent
        </h2>
        <p class="text-base sm:text-lg lg:text-xl max-w-2xl mx-auto">
            Grinta combines the speed of Spotlight with the power of AI, notes,
            and system control - all in one elegant interface.
        </p>
    </div>
    <div class="relative">
        <img
            src="/grinta.jpg"
            class="rounded-[1.5rem] w-full z-10 pointer-events-none !m-0 shadow-2xl"
        />
        <div
            class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex gap-4"
        >
            <div
                class="px-3 py-1 sm:px-4 sm:py-2 bg-zinc-900 rounded-full flex items-center shadow-lg text-sm"
            >
                <span class="text-secondary mr-2">âŒ˜</span>
                <span>Space</span>
                <span class="ml-2 text-gray-400 hidden sm:inline"
                    >to activate</span
                >
            </div>
        </div>
    </div>
    
    <!-- Feature section with proper grid layout -->
    <div class="!mt-12 sm:!mt-16 lg:!mt-20">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
            <!-- Column 1 -->
            <div class="flex flex-col items-center !mt-0">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-indigo-500/20">
                    <SearchIcon class="w-6 h-6" />
                </div>
                <h3 class="!text-xl font-medium mt-4 mb-2 h-7">Smart Search</h3>
                <p class="text-gray-400 text-center min-h-[48px] max-w-[220px] mx-auto">
                    Find files, apps, and web results with lightning speed
                </p>
            </div>

            <!-- Column 2 -->
            <div class="flex flex-col items-center !mt-0">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-indigo-500/20">
                    <SparklesIcon class="w-6 h-6" />
                </div>
                <h3 class="!text-xl font-medium mt-4 mb-2 h-7">AI-Powered Notes</h3>
                <p class="text-gray-400 text-center min-h-[48px] max-w-[220px] mx-auto">
                    Write and organize your thoughts with AI assistance
                </p>
            </div>

            <!-- Column 3 -->
            <div class="flex flex-col items-center !mt-0">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-indigo-500/20">
                    <BrainCircuitIcon class="w-6 h-6" />
                </div>
                <h3 class="!text-xl font-medium mt-4 mb-2 h-7">Natural Language</h3>
                <p class="text-gray-400 text-center min-h-[48px] max-w-[220px] mx-auto">
                    Ask questions and perform tasks in plain English
                </p>
            </div>
        </div>
    </div>
</section>
