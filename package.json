{
	"name": "grintabar",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "bunx --bun biome check .",
		"lint:staged": "biome check --no-errors-on-unmatched --staged ./{apps,packages}/**/*.{ts}",
		"test": "turbo test",
		"format": "bunx --bun biome check --write --unsafe .",
		"cleanup": "turbo cleanup && rimraf node_modules bun.lock",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "1.2.4",
		"husky": "^9.1.7",
		"rimraf": "6.0.1",
		"turbo": "2.3.3",
		"typescript": "5.5.4"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "bun@1.1.42",
	"workspaces": ["apps/*", "packages/*"],
	"dependencies": {
		"@astrojs/language-server": "^2.15.4",
		"svelte-language-server": "^0.17.10",
		"svelte-tiny-virtual-list": "^2.1.2"
	}
}
