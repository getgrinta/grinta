{
	"name": "getgrintacom",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"test": "turbo test",
		"lint": "oxlint",
		"format": "oxlint --fix --fix-suggestions",
		"cleanup": "turbo cleanup && rimraf node_modules bun.lock",
		"prepare": "husky"
	},
	"devDependencies": {
		"@tsconfig/bun": "^1.0.7",
		"@types/bun": "1.2.8",
		"husky": "9.1.7",
		"lint-staged": "15.5.0",
		"oxlint": "0.16.4",
		"rimraf": "6.0.1",
		"turbo": "2.4.4",
		"typescript": "5.8.2"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "bun@1.2.5",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"**/*.{js,mjs,cjs,ts,astro,svelte}": "oxlint"
	}
}